<%- include('../partials/nav') %>

<section>
  <h1>Edit your artist!</h1>
  <form 
    action="/genres/<%= genre._id %>/comments/<%= comment._id %>?_method=PUT"
    method="POST"
  >
    <label>
      Content: 
      <textarea
        cols="30"
        rows="5" 
        type="text"
        name="content" 
        autocomplete="off"
      ><%= comment.content %></textarea>
    </label>
    <button type="submit">Update Artist</button>
  </form>
</section>

